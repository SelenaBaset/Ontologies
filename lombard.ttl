lombard:Ordinatio # DB PL: RCS_XPRESSIONS - TYPE
	a rdfs:Class;
	rdfs:label "ordinatio"@la, "?"@en, "?"@de;
	rdfs:comment """Ordinatio commentary on Petrus Lombardus' Sentences."""@en; # ? regulation
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
