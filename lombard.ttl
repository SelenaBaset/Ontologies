@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix skos: <http://www.w3.org/2004/02/skos/core#>.
@prefix dct: <http://purl.org/dc/terms/>.
@prefix human: <http://www.nie-ine.ch/ontology/human#>.
@prefix text: <http://www.nie-ine.ch/ontology/text#>.
@prefix kb: <http://www.knora.org/ontology/knora-base#>.
@prefix lombard: <http://www.nie-ine.ch/ontology/petrus-lombardus#>.

<http://www.nie-ine.ch/ontology/petrus-lombardus>
	a owl:Ontology;
	dct:title "An ontology about Petrus Lombardus"@en;
	dct:description """Formal description of elements in scientific study of Petrus Lombardus."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	dct:creator "Hans Cools, software developer, NIE, Basel University, Switzerland"@en;
	dct:conformsTo "OWL Full"@en;
	rdfs:seeAlso <https://de.wikipedia.org/wiki/Friedrich_Stegmüller>.

# general:
	# DB PL: mysql elements of Petrus Lombardus project
	# TBS: to be specified
	# SCO: rdfs:subClassOf
	# SPO: rdfs:subPropertyOf

#
# CLASSES
#

lombard:Person # DB PL: RCS_AUTHORS
	a rdfs:Class;
	rdfs:label "person"@en, "Person"@de, "personne"@fr, "persona"@it;
	rdfs:comment """Person as in scientific study of Petrus Lombardus."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subClassOf human:Person, kb:Resource, [ # Knora requirement
			a owl:Restriction; owl:onProperty lombard:hasStegmuellerPersonDescriptionObject; owl:minCardinality "0"^^xsd:nonNegativeInteger].

lombard:StegmuellerPersonDescriptionObject # DB PL: RCS_AUTHORS - STGM # Knora requirement
	a rdfs:Class;
	rdfs:label "Stegmüller's person description object"@en;
	rdfs:comment """Stegmüller's person description as abstract object."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subClassOf text:DescriptionObject, [ # SCO text:TextObject SCO kb:TextValue
		a owl:Restriction; owl:onProperty kb:valueHasString; owl:minCardinality "1"^^xsd:nonNegativeInteger].

lombard:StegmuellerExpressionDescriptionObject # DB PL: RCS_XPRESSIONS - STGM I/STGM II # Knora requirement
	a rdfs:Class;
	rdfs:label "Stegmüller's expression description object"@en;
	rdfs:comment """Stegmüller's expression description as abstract object."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subClassOf text:DescriptionObject, [ # SCO text:TextObject SCO kb:TextValue
		a owl:Restriction; owl:onProperty kb:valueHasString; owl:minCardinality "1"^^xsd:nonNegativeInteger].

lombard:Reportator # DB PL: RCS_REL_AID_XID - FUNCTION
	a rdfs:Class;
	rdfs:label "Reportator"@la, "reportator"@en, "Reportator"@de;
	rdfs:comment """Role of a student registering the content of a lesson."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subClassOf human:Role, kb:Resource. # Knora requirement

lombard:Glossator # DB PL: RCS_REL_AID_XID - FUNCTION
	a rdfs:Class;
	rdfs:label "Glossator"@la, "glossator"@en, "Glossator"@de;
	rdfs:comment """Role of a person adding a layer to a text."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subClassOf human:Role, kb:Resource. # Knora requirement

lombard:Commentary # DB PL: RCS_XPRESSIONS - TYPE
	a rdfs:Class;
	rdfs:label "commentarium"@la, "commentary"@en, "Erläuterung"@de;
	rdfs:comment """Commentary on Petrus Lombardus' Sentences."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subClassOf text:Commentary.

lombard:Lectura # DB PL: RCS_XPRESSIONS - TYPE
