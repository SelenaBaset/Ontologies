#
# PROPERTIES
#

lombard:hasStegmuellerPersonDescriptionObject # DB PL: RCS_AUTHORS - STGM
	a owl:ObjectProperty;
	rdfs:label "has Stegmüller's person description object"@en;
	rdfs:comment """Relating a person to a Stegmüller's description object."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subPropertyOf kb:hasValue; # text:hasDescriptionObject SPO text:hasTextObject SPO kb:hasValue
	rdfs:domain human:Person;
	rdfs:range lombard:StegmuellerPersonDescriptionObject;
	kb:subjectClassConstraint human:Person;  # Knora requirement
	kb:objectClassConstraint lombard:StegmuellerPersonDescriptionObject. # Knora requirement

lombard:hasStegmuellerPersonDescription # DB PL: RCS_AUTHORS - STGM
	a owl:DatatypeProperty;
	rdfs:label "has Stegmüller's person description"@en;
	rdfs:comment """Relating a person to a Stegmüller's description."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subPropertyOf text:hasDescription; # rdfs:comment, dct:description
	owl:propertyChainAxiom (lombard:hasStegmuellerPersonDescriptionObject kb:valueHasString);
	rdfs:domain human:Person;
	rdfs:range rdfs:Literal. # NOT xsd:string

lombard:hasStegmuellerExpressionDescriptionObject # DB PL: RCS_XPRESSIONS - STGM I/STGM II
	a owl:ObjectProperty;
	rdfs:label "has Stegmüller's expression description object"@en;
	rdfs:comment """Relating an expression to a Stegmüller's description object."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subPropertyOf kb:hasValue; # text:hasDescriptionObject rdfs:subPropertyOf text:hasTextObject rdfs:subPropertyOf kb:hasValue
	rdfs:domain text:Expression;
	rdfs:range lombard:StegmuellerExpressionDescriptionObject;
	kb:subjectClassConstraint text:Expression; # Knora requirement
	kb:objectClassConstraint lombard:StegmuellerExpressionDescriptionObject. # Knora requirement

lombard:hasStegmuellerExpressionDescription # DB PL: RCS_XPRESSIONS - STGM I/STGM II
	a owl:DatatypeProperty;
	rdfs:label "has Stegmüller's expression description"@en;
	rdfs:comment """Relating an expression to a Stegmüller's description."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:subPropertyOf text:hasDescription; # rdfs:comment, dct:description
	owl:propertyChainAxiom (lombard:hasStegmuellerExpressionDescriptionObject kb:valueHasString);
	rdfs:domain text:Expression;
	rdfs:range rdfs:Literal. # NOT xsd:string

lombard:hasStegmuellerCode
	a owl:DatatypeProperty;
	rdfs:label "has Stegmüller's code"@en;
	rdfs:comment """Relating an expression to a Stegmüller's code."""@en;
	rdfs:isDefinedBy <http://www.nie-ine.ch/ontology/petrus-lombardus#>;
	rdfs:domain text:Expression;
	rdfs:range rdfs:Literal. # NOT xsd:string