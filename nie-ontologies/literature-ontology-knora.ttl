litera:Poet
	a owl:Class;
	rdfs:label "poet"@en, "Dichter"@de;
	rdfs:comment """Author of a poem."""@en;
	rdfs:subClassOf text:Author.

litera:Novelist
	a owl:Class;
	rdfs:label "novelist"@en, "Romanschriftsteller"@de;
	rdfs:comment """Author of a novel."""@en;
	rdfs:subClassOf text:Author.

